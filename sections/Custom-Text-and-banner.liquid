<div class="custom-section">
  <div class="custom-grid">
    <div class="grid-text"> 
      <div class="custom-text pad-l pad-mob">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.text }}</p>
        <button class="animatedbutton2 mob-none"><a href="{{ section.settings.button_link }}" >{{ section.settings.button_label }}<span>{% render 'icon-arrow' %}</span></a></button>
      </div>
    </div>
      <div class="grid-image">
         <img src="{{ section.settings.image | image_url}}" alt="Custom Image" class="custom-image">
         <button class="animatedbutton2 desk-none"><a href="{{ section.settings.button_link }}" >{{ section.settings.button_label }}<span>{% render 'icon-arrow' %}</span></a></button>
    </div>
  </div>
</div>

<style>
   .desk-none {
    display:none !important;
  }
   @media only screen and (max-width: 600px) {
    .mob-none {
    display: none !important;
}
     .custom-text h2 {
    text-align: center;
    font-size: 31px !important;
}
     .custom-text p {
    text-align: center !important;
     }
     button.animatedbutton2 {
    position: absolute;
}
    .custom-grid {
      display:block !important;
    }
     .pad-mob {
    padding: 29px !important;
}
     .custom-text h2 {
    font-size: 29px;
    text-align: center;
}
   }
 .animatedbutton2 {
    position: relative;
    overflow: hidden;
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #000; /* Text color black by default */
    background: #fff;
    border: 2px solid #000;
    transition: color 0.4s ease;
    z-index: 0;
}

.animatedbutton2::before {
    content: '';
    position: absolute;
    top: 0;
    right: 100%;
    width: 0%;
    height: 100%;
    background: #FFF544; /* Background color */
    transition: right 0.4s ease;
    z-index: -1;
}

.animatedbutton2:hover {
    color: #fff !important; /* Text color white on hover */
}

.animatedbutton2:hover::before {
    right: 0 !important;
    width: 100% !important;
}

  button.animatedbutton2 a {
    font-size: 16px;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
}
  button.animatedbutton2 span {
    margin: 8px;
}
  .custom-text p {
    font-size: 18px;
    color: #;
    font-weight: 400;
    color: #000000;
    line-height: 24px;
}
  .custom-text h2 {
    font-size: 53px;
    font-weight: 500;
    margin: 0px;
}
  button.animatedbutton2 {
    padding: 13px 38px;
    border: 0px;
    background: #000;
    color: #fff !important;
}
  .pad-l {
    padding-left:70px;
  }
  .custom-section {
    padding: 0px 0px;
    background-color: #ffffff;;
  }
  .custom-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 15px;
    width: 100%;
    margin: 0 auto;
  }
  .grid-image, .grid-text {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .custom-image {
    width: 100%;
    height: auto;
    display: block;
  }
  .custom-text {
    text-align: left;
  }
</style>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:sections.image-with-text.blocks.heading.settings.heading.default",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
     {
          "type": "richtext",
          "id": "text",
          "default": "t:sections.image-with-text.blocks.text.settings.text.default",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        },
      {
          "type": "text",
          "id": "button_label",
          "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        },
       {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    ],
    "presets": [
      {
        "name":"Custom-Text-and-banner"
      }
    ]
  }
{% endschema %}